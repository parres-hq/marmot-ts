{
  "name": "marmot-ts",
  "version": "0.0.1",
  "type": "module",
  "description": "Marmot protocol implementation in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf ./dist",
    "compile": "tsc -b tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest",
    "prepare": "husky && node hacky-patch.js",
    "example:full": "tsx examples/full-workflow.ts",
    "example:chat": "tsx examples/simple-chat.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parres-hq/marmot-ts.git"
  },
  "keywords": [
    "nostr",
    "mls",
    "marmot"
  ],
  "author": "Parres",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/parres-hq/marmot-ts/issues"
  },
  "homepage": "https://github.com/parres-hq/marmot-ts#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@hpke/core": "^1.7.4",
    "@noble/ciphers": "^2.0.1",
    "@noble/curves": "^2.0.1",
    "ts-mls": "^1.3.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "~6.0.1",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  }
}
